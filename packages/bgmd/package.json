{
  "name": "bgmd",
  "version": "0.0.64",
  "description": "Bangumi Data",
  "keywords": [
    "anime",
    "bangumi",
    "bgm",
    "tmdb"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./data/index.json",
      "require": "./data/index.json"
    },
    "./full": {
      "types": "./full.d.ts",
      "import": "./data/full.json",
      "require": "./data/full.json"
    },
    "./calendar": {
      "types": "./calendar.d.ts",
      "import": "./data/calendar.json",
      "require": "./data/calendar.json"
    },
    "./transform": {
      "types": "./dist/transform.d.ts",
      "import": "./dist/transform.mjs",
      "require": "./dist/transform.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.cjs"
    }
  },
  "main": "data/index.json",
  "module": "data/index.json",
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "files": [
    "dist",
    "data",
    "*.d.ts"
  ],
  "scripts": {
    "build": "tsx ../../apps/bgmx/src/cli.ts --root ../.. build && tsdown",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "release": "release-it",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bangumi-data": ">=0.3.184",
    "bgmc": "workspace:*",
    "bgmt": "workspace:*",
    "tmdbc": "workspace:*",
    "type-fest": "^5.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "bgmx": "workspace:*",
    "breadc": "^0.9.7"
  },
  "engines": {
    "node": ">=v20.8.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmd): release v${version}",
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "pnpm run build && pnpm run test:ci"
    }
  }
}

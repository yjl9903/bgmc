{
  "name": "bgmd",
  "version": "0.0.2",
  "description": "Bangumi Data",
  "keywords": [
    "bangumi",
    "bgm"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/data.json",
      "import": "./dist/data.json",
      "types": "./index.d.ts"
    },
    "./transform": {
      "require": "./dist/transform.cjs",
      "import": "./dist/transform.mjs",
      "types": "./dist/transform.d.ts"
    }
  },
  "main": "dist/data.json",
  "module": "dist/data.json",
  "types": "index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "before:init": "pnpm run build && pnpm run test:ci",
    "build": "tsx scripts/build.ts && unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "release-it",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@onekuma/map": "^0.1.10",
    "@types/fs-extra": "^11.0.2",
    "bangumi-data": "^0.3.124",
    "bgmc": "workspace:*",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.5",
    "tmdbc": "workspace:*",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=v20.8.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmd): release v${version}",
      "tag": false,
      "push": true
    },
    "npm": {
      "publish": true
    }
  }
}

  {
    "title": "インタールード",
    "date": "2004-03-25",
    "bangumi": {
      "date": "2004-03-25",
      "platform": "OVA",
      "images": {
        "small": "https://lain.bgm.tv/r/200/pic/cover/l/fd/9d/3498_Fvnvx.jpg",

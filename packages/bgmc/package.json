{
  "name": "bgmc",
  "version": "0.0.11",
  "description": "Bangumi Client",
  "keywords": [
    "bangumi",
    "bgm"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./data": {
      "require": "./dist/data.cjs",
      "import": "./dist/data.mjs",
      "types": "./dist/data.d.ts"
    },
    "./types": {
      "require": "./dist/types.cjs",
      "import": "./dist/types.mjs",
      "types": "./dist/types.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "bin": {
    "bgmc": "./cli.mjs"
  },
  "files": [
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "release-it",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "breadc": "^0.9.7"
  },
  "devDependencies": {
    "bgm-types": "^3.1.2"
  },
  "engines": {
    "node": ">=v20.8.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmc): release v${version}",
      "tag": false,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:version": "pnpm run build",
      "before:init": "pnpm run build && pnpm run test:ci"
    }
  }
}

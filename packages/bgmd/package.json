{
  "name": "bgmd",
  "version": "0.0.1",
  "description": "Bangumi Data",
  "keywords": [
    "bangumi",
    "bgm"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "before:init": "pnpm run build && pnpm run test:ci",
    "build": "unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "release-it",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "vitest": "^0.31.0"
  },
  "engines": {
    "node": ">=v18.15.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmd): release v${version}",
      "tag": false,
      "push": true
    },
    "npm": {
      "publish": true
    }
  }
}
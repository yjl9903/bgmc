{
  "name": "bgmd",
  "version": "0.0.49",
  "description": "Bangumi Data",
  "keywords": [
    "anime",
    "bangumi",
    "bgm",
    "tmdb"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": "./data/index.json",
      "import": "./data/index.json",
      "types": "./index.d.ts"
    },
    "./full": {
      "require": "./data/full.json",
      "import": "./data/full.json",
      "types": "./full.d.ts"
    },
    "./calendar": {
      "require": "./data/calendar.json",
      "import": "./data/calendar.json",
      "types": "./calendar.d.ts"
    },
    "./transform": {
      "require": "./dist/transform.cjs",
      "import": "./dist/transform.mjs",
      "types": "./dist/transform.d.ts"
    },
    "./types": {
      "require": "./dist/types.cjs",
      "import": "./dist/types.mjs",
      "types": "./dist/types.d.ts"
    }
  },
  "main": "data/index.json",
  "module": "data/index.json",
  "types": "index.d.ts",
  "files": [
    "dist",
    "data",
    "*.d.ts"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts && unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "release-it",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bangumi-data": ">=0.3.142",
    "bgmc": "workspace:*",
    "tmdbc": "workspace:*",
    "type-fest": "^4.15.0"
  },
  "devDependencies": {
    "@onekuma/map": "^0.1.10",
    "@types/fs-extra": "^11.0.4",
    "breadc": "^0.9.7",
    "fastest-levenshtein": "^1.0.16",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.5",
    "undici": "^6.13.0",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=v20.8.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmd): release v${version}",
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "pnpm run build && pnpm run test:ci"
    }
  }
}
